<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/weather_app_background"

    android:padding="10dp"

    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:layout_marginTop="20dp"

            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/first"

                android:layout_width="match_parent"

                android:layout_height="73dp"

                android:layout_marginStart="20dp"

                android:layout_marginTop="30dp"

                android:layout_marginEnd="20dp"

                android:background="@android:drawable/editbox_background_normal"

                android:gravity="center_horizontal"

                android:padding="2dp">

                <ImageView

                    android:id="@+id/search"

                    android:layout_width="50dp"

                    android:layout_height="70dp"

                    android:layout_alignParentEnd="true"

                    android:layout_marginEnd="01dp"

                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/search_icon" />

                <EditText

                    android:id="@+id/Your_city"
                    android:layout_width="650dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-01dp"

                    android:ems="10"

                    android:hint="enter_your_city_name"

                    android:inputType="text"

                    android:textColor="#120F0F"

                    android:textColorHint="#939393"

                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView

                android:id="@+id/forecast"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:includeFontPadding="false"

                android:textAllCaps="true"

                android:textColor="#3E0909"

                android:textSize="16sp" />

            <TextView

                android:id="@+id/temp"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="10dp"

                android:includeFontPadding="false"

                android:textColor="#735151"

                android:textSize="40sp"

                android:textStyle="bold" />

            <TextView

                android:id="@+id/time"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="40dp"

                android:includeFontPadding="false"

                android:textColor="#835656"

                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="32dp"

            android:layout_marginTop="210dp"

            android:gravity="center_horizontal"

            android:orientation="vertical">

            <TextView

                android:id="@+id/country"

                android:layout_width="wrap_content"

                android:layout_height="94dp"

                android:layout_marginTop="8dp"

                android:includeFontPadding="false"

                android:textColor="#1E1B1B"

                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"

            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView

                    android:layout_width="111dp"

                    android:layout_height="111dp"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="5dp"

                    android:gravity="start"

                    android:text="Humidity"

                    android:textAllCaps="false"

                    android:textColor="#0C0C0C"

                    android:textSize="16sp"

                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="38dp"

                    android:src="@drawable/humi" />

                <TextView

                    android:id="@+id/humidity"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="end"

                    android:layout_marginStart="-350dp"

                    android:gravity="center"

                    android:padding="5dp"

                    android:text=" — "

                    android:textColor="#090808"

                    android:textSize="16sp"
                    tools:textColor="#151414" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView

                    android:layout_width="111dp"

                    android:layout_height="110dp"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="5dp"

                    android:gravity="start"

                    android:text="Min Temperature"

                    android:textColor="#151515"

                    android:textSize="15sp"

                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="38dp"

                    android:src="@drawable/tem_down" />

                <TextView

                    android:id="@+id/min_temp"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="-450dp"

                    android:gravity="center"

                    android:padding="5dp"

                    android:text=" — "

                    android:textColor="#100F0F"

                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView

                    android:layout_width="111dp"

                    android:layout_height="110dp"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="5dp"

                    android:gravity="start"

                    android:text="Max Temperature"

                    android:textColor="#131313"

                    android:textSize="15sp"

                    android:textStyle="bold" />

                <ImageView

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="38dp"

                    android:src="@drawable/tem_up" />

                <TextView

                    android:id="@+id/max_temp"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"

                    android:layout_marginStart="-400dp"

                    android:gravity="center"

                    android:padding="5dp"

                    android:text=" — "

                    android:textColor="#0E0D0D"

                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="20dp"

                android:layout_marginTop="15dp"

                android:layout_marginRight="20dp"

                android:orientation="horizontal"

                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/sunrisee" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:text="Sunrise"
                        android:textColor="#171414" />

                    <TextView
                        android:id="@+id/sunrises"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text=" — "
                        android:textColor="#675858"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/sunsett" />

                    <TextView
                        android:layout_width="1198dp"
                        android:layout_height="73dp"
                        android:text="Sunset"
                        android:textColor="#171414" />

                    <TextView
                        android:id="@+id/sunsets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text=" — "
                        android:textColor="#2E2B2B"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView

            android:id="@+id/city"

            android:layout_width="177dp"

            android:layout_height="33dp"

            android:includeFontPadding="false"

            android:textColor="#B55151"

            android:textSize="18sp"

            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>